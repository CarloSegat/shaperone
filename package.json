{
  "name": "@hydrofoil/shaperone",
  "private": true,
  "license": "MIT",
  "scripts": {
    "lint": "eslint . --ext .ts --quiet --ignore-path .gitignore --ignore-path .eslintignore",
    "build": "lerna run build",
    "test": "run-p test:*",
    "test:mocha": "TS_NODE_TRANSPILE_ONLY=true c8 --all -o coverage/mocha --reporter=lcov mocha packages/core/test/**/**/*.test.ts",
    "test:open-wc": "karma start --coverage",
    "test:open-wc:watch": "karma start --auto-watch=true --single-run=false",
    "release": "changeset publish"
  },
  "workspaces": [
    "packages/*",
    "demos/*"
  ],
  "dependencies": {
    "@babel/plugin-proposal-class-properties": "^7.10.1",
    "@babel/plugin-proposal-decorators": "^7.10.3",
    "@babel/preset-typescript": "^7.10.1",
    "@changesets/cli": "^2.8.0",
    "@open-wc/building-webpack": "^2.13.32",
    "@tpluscode/eslint-config": "^0.1.1",
    "@types/rdf-js": "^4.0.0",
    "@typescript-eslint/eslint-plugin": "^4.5.0",
    "@typescript-eslint/parser": "^4.5.0",
    "c8": "^7.1.2",
    "chai-snapshot-matcher": "^1.0.6",
    "es-dev-commonjs-transformer": "^0.2.0",
    "eslint": "^7.12.0",
    "eslint-config-standard": "^15.0.0",
    "eslint-plugin-babel": "^5.3.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-standard": "^4.0.2",
    "eslint-plugin-wc": "^1.2.0",
    "husky": "^4.2.5",
    "lerna": "^3.22.1",
    "lint-staged": "^10.2.11",
    "lit-analyzer": "^1.2.1",
    "npm-run-all": "^4.1.5",
    "raw-loader": "^4.0.1",
    "rdfjs-eds-plugin": "*",
    "readable-stream": "^3.6.0",
    "sinon": "^9.0.2",
    "sinon-chai": "^3.5.0",
    "standard": "^14.3.4",
    "ts-lit-plugin": "^1.2.1",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.3",
    "web-component-analyzer": "^1.1.6",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.11.0",
    "webpack-merge": "^5.2.0",
    "yarn": "^1.22.4"
  },
  "mocha": {
    "file": "test-setup.js",
    "watch-files": [
      "./**/*.ts"
    ],
    "require": [
      "ts-node/register",
      "chai-snapshot-matcher"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npx lerna run analyze && git add **/custom-elements.json **/README.md"
    }
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix --quiet"
    ]
  }
}
